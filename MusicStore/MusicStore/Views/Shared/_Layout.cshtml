<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

</head>
<body>
    <div class="container myContainer" id="containerMain">
        <div id="header">
            <div class="row container">
                <div class="col-md-8">
                    <h1>Model View Controller Sample Site</h1>
                </div>

                <div class="col-md-2">
                    <div class=" hidden-sm hidden-xs">
                        <div class="col-md-offset-6 col-md-1">
                            @{Html.RenderAction("CartSummary", "ShoppingCart");}
                            <a href="ShoppingCart?Length=12" id="iconShop">
                                <img src="~/Content/Images/Music/cartWhite.png" />

                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-2">

                    <div class="navbar-collapse collapse">
                        <div class="nav navbar-nav iconContainer">
                            <a href="@Url.Content("~/Store/")">
                                <img src="~/Content/Images/Music/cart.png" class="icon" alt="Cart" title="Cart">
                            </a>
                            <a href="@Url.Content("~/StoreManager")">
                                <img src="~/Content/Images/Music/account.png" class="icon" alt="Signin" title="Signin">
                            </a><a href="@Url.Content("~")" id="current">
                                <img src="~/Content/Images/Music/about.png" class="icon" alt="About" title="About" style="margin-left:1px;">
                            </a>
                        </div>
                    </div>
                </div>


            </div>


        </div>

                @{Html.RenderAction("GenreMenu", "Store");}
                @if (ViewBag.AtOrderHistory != null)
            {


    <div id="main">
        @RenderBody()
    </div> }
else
{
    <div id="main" style="max-width: 58%">
        @RenderBody()
    </div>
                    <div id="rightHome" style="float: right; max-width: 25%; background-color:#000000; color:#fff; border-radius:10px ">

                        @{Html.RenderAction("RightContent", "Home");}
                    </div>
}
    <div id="footer">
        © 2021 - My ASP.NET Application
    </div>
        </div>

</body>
</html>